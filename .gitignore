<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Telegram –°—á–µ—Ç—á–∏–∫</title>
    <script src="https://telegram.org/js/telegram-web-app.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 500px;
            margin: 0 auto;
        }
        
        .header {
            text-align: center;
            margin-bottom: 30px;
            color: white;
        }
        
        .header h1 {
            font-size: 28px;
            margin-bottom: 10px;
        }
        
        .card {
            background: white;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }
        
        .counter-display {
            text-align: center;
            margin: 30px 0;
        }
        
        .counter-circle {
            width: 200px;
            height: 200px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            margin: 0 auto;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 64px;
            font-weight: bold;
            cursor: pointer;
            user-select: none;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        }
        
        .counter-circle:active {
            transform: scale(0.95);
        }
        
        .buttons {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin: 20px 0;
        }
        
        .btn {
            padding: 15px;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        
        .btn-secondary {
            background: #f0f0f0;
            color: #333;
        }
        
        .btn-danger {
            background: #ff4757;
            color: white;
        }
        
        .btn:active {
            transform: translateY(2px);
        }
        
        .history-item {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 15px;
            margin-bottom: 10px;
            border-left: 4px solid #667eea;
        }
        
        .history-title {
            font-weight: 600;
            margin-bottom: 5px;
        }
        
        .history-meta {
            display: flex;
            justify-content: space-between;
            color: #666;
            font-size: 14px;
            margin-top: 10px;
        }
        
        .delete-btn {
            background: #ff4757;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 12px;
        }
        
        .filter-buttons {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            overflow-x: auto;
            padding-bottom: 10px;
        }
        
        .filter-btn {
            padding: 8px 16px;
            background: white;
            border: 2px solid #667eea;
            border-radius: 20px;
            color: #667eea;
            cursor: pointer;
            white-space: nowrap;
        }
        
        .filter-btn.active {
            background: #667eea;
            color: white;
        }
        
        .empty-state {
            text-align: center;
            padding: 40px 20px;
            color: #666;
        }
        
        .input-group {
            margin-bottom: 20px;
        }
        
        .input-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #333;
        }
        
        .input-group input,
        .input-group textarea {
            width: 100%;
            padding: 12px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 16px;
            transition: border-color 0.3s;
        }
        
        .input-group input:focus,
        .input-group textarea:focus {
            border-color: #667eea;
            outline: none;
        }
        
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.5);
            z-index: 1000;
            align-items: center;
            justify-content: center;
        }
        
        .modal-content {
            background: white;
            border-radius: 20px;
            padding: 30px;
            max-width: 90%;
            width: 500px;
            max-height: 90vh;
            overflow-y: auto;
        }
        
        .page {
            display: none;
        }
        
        .page.active {
            display: block;
        }
        
        .nav-buttons {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- –ì–ª–∞–≤–Ω–∞—è —Å—Ç—Ä–∞–Ω–∏—Ü–∞ -->
        <div id="mainPage" class="page active">
            <div class="header">
                <h1>üìä –°—á–µ—Ç—á–∏–∫</h1>
                <p>–ù–∞–∂–º–∏—Ç–µ –Ω–∞ –∫—Ä—É–∂–æ–∫ –¥–ª—è –ø–æ–¥—Å—á–µ—Ç–∞</p>
            </div>
            
            <div class="card">
                <div class="counter-display">
                    <div class="counter-circle" id="counterCircle">
                        <span id="counterValue">0</span>
                    </div>
                </div>
                
                <div class="buttons">
                    <button class="btn btn-primary" onclick="saveCounter()">
                        üíæ –°–æ—Ö—Ä–∞–Ω–∏—Ç—å
                    </button>
                    <button class="btn btn-secondary" onclick="resetCounter()">
                        üîÑ –°–±—Ä–æ—Å–∏—Ç—å
                    </button>
                </div>
                
                <button class="btn btn-secondary" onclick="showPage('historyPage')" style="width: 100%; margin-top: 10px;">
                    üìã –ò—Å—Ç–æ—Ä–∏—è –ø–æ–¥—Å—á–µ—Ç–æ–≤
                </button>
            </div>
        </div>
        
        <!-- –°—Ç—Ä–∞–Ω–∏—Ü–∞ –∏—Å—Ç–æ—Ä–∏–∏ -->
        <div id="historyPage" class="page">
            <div class="header">
                <h1>üìã –ò—Å—Ç–æ—Ä–∏—è</h1>
                <button class="btn btn-secondary" onclick="showPage('mainPage')" style="margin-top: 10px;">
                    ‚Üê –ù–∞–∑–∞–¥
                </button>
            </div>
            
            <div class="card">
                <div class="filter-buttons" id="filterButtons">
                    <button class="filter-btn active" onclick="filterHistory('all')">–í—Å–µ</button>
                    <button class="filter-btn" onclick="filterHistory('today')">–°–µ–≥–æ–¥–Ω—è</button>
                    <button class="filter-btn" onclick="filterHistory('yesterday')">–í—á–µ—Ä–∞</button>
                    <button class="filter-btn" onclick="filterHistory('week')">–ù–µ–¥–µ–ª—è</button>
                    <button class="filter-btn" onclick="filterHistory('month')">–ú–µ—Å—è—Ü</button>
                </div>
                
                <div id="historyList">
                    <!-- –ò—Å—Ç–æ—Ä–∏—è –±—É–¥–µ—Ç –∑–∞–≥—Ä—É–∂–µ–Ω–∞ –∑–¥–µ—Å—å -->
                </div>
                
                <button class="btn btn-danger" onclick="clearHistory()" style="width: 100%; margin-top: 20px;">
                    üóëÔ∏è –û—á–∏—Å—Ç–∏—Ç—å –≤—Å—é –∏—Å—Ç–æ—Ä–∏—é
                </button>
            </div>
        </div>
        
        <!-- –ú–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è -->
        <div id="saveModal" class="modal">
            <div class="modal-content">
                <h2 style="margin-bottom: 20px;">üíæ –°–æ—Ö—Ä–∞–Ω–∏—Ç—å —Ä–µ–∑—É–ª—å—Ç–∞—Ç</h2>
                
                <div class="input-group">
                    <label for="saveTitle">–ù–∞–∑–≤–∞–Ω–∏–µ *</label>
                    <input type="text" id="saveTitle" placeholder="–í–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ" required>
                </div>
                
                <div class="input-group">
                    <label for="saveDescription">–û–ø–∏—Å–∞–Ω–∏–µ (–Ω–µ–æ–±—è–∑–∞—Ç–µ–ª—å–Ω–æ)</label>
                    <textarea id="saveDescription" rows="3" placeholder="–í–≤–µ–¥–∏—Ç–µ –æ–ø–∏—Å–∞–Ω–∏–µ"></textarea>
                </div>
                
                <div style="color: #666; margin-bottom: 20px;">
                    –¢–µ–∫—É—â–∏–π —Å—á–µ—Ç: <strong id="modalCounterValue">0</strong>
                </div>
                
                <div class="buttons">
                    <button class="btn btn-primary" onclick="confirmSave()" style="flex: 1;">
                        üíæ –°–æ—Ö—Ä–∞–Ω–∏—Ç—å
                    </button>
                    <button class="btn btn-secondary" onclick="closeModal()" style="flex: 1;">
                        –û—Ç–º–µ–Ω–∞
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è Telegram WebApp
        const tg = window.Telegram.WebApp;
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è
        tg.expand();
        tg.setHeaderColor('#667eea');
        tg.setBackgroundColor('#667eea');
        
        // –ü–µ—Ä–µ–º–µ–Ω–Ω—ã–µ
        let counter = 0;
        let history = [];
        
        // –ó–∞–≥—Ä—É–∑–∫–∞ –¥–∞–Ω–Ω—ã—Ö –ø—Ä–∏ —Å—Ç–∞—Ä—Ç–µ
        document.addEventListener('DOMContentLoaded', function() {
            loadData();
            updateCounterDisplay();
            loadHistory();
        });
        
        // –£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ —Å—á–µ—Ç—á–∏–∫–æ–º
        document.getElementById('counterCircle').addEventListener('click', function() {
            counter++;
            updateCounterDisplay();
            saveData();
        });
        
        function updateCounterDisplay() {
            document.getElementById('counterValue').textContent = counter;
            document.getElementById('modalCounterValue').textContent = counter;
        }
        
        function resetCounter() {
            if (counter > 0 && confirm('–°–±—Ä–æ—Å–∏—Ç—å —Å—á–µ—Ç—á–∏–∫?')) {
                counter = 0;
                updateCounterDisplay();
                saveData();
            }
        }
        
        function saveCounter() {
            if (counter > 0) {
                document.getElementById('saveModal').style.display = 'flex';
                document.getElementById('saveTitle').focus();
            } else {
                alert('–°—á–µ—Ç —Ä–∞–≤–µ–Ω –Ω—É–ª—é!');
            }
        }
        
        function closeModal() {
            document.getElementById('saveModal').style.display = 'none';
            document.getElementById('saveTitle').value = '';
            document.getElementById('saveDescription').value = '';
        }
        
        function confirmSave() {
            const title = document.getElementById('saveTitle').value.trim();
            const description = document.getElementById('saveDescription').value.trim();
            
            if (!title) {
                alert('–í–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ!');
                return;
            }
            
            // –î–æ–±–∞–≤–ª—è–µ–º –∑–∞–ø–∏—Å—å –≤ –∏—Å—Ç–æ—Ä–∏—é
            const historyItem = {
                id: Date.now(),
                title: title,
                description: description,
                count: counter,
                date: new Date().toISOString()
            };
            
            history.unshift(historyItem); // –î–æ–±–∞–≤–ª—è–µ–º –≤ –Ω–∞—á–∞–ª–æ
            saveHistory();
            
            // –°–±—Ä–∞—Å—ã–≤–∞–µ–º —Å—á–µ—Ç—á–∏–∫
            counter = 0;
            updateCounterDisplay();
            saveData();
            
            // –ó–∞–∫—Ä—ã–≤–∞–µ–º –º–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ
            closeModal();
            
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ
            showNotification('‚úÖ –°–æ—Ö—Ä–∞–Ω–µ–Ω–æ!');
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –∏—Å—Ç–æ—Ä–∏—é –µ—Å–ª–∏ –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü–µ –∏—Å—Ç–æ—Ä–∏–∏
            if (document.getElementById('historyPage').classList.contains('active')) {
                loadHistory();
            }
        }
        
        // –£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –∏—Å—Ç–æ—Ä–∏–µ–π
        function loadHistory() {
            const historyList = document.getElementById('historyList');
            const filteredHistory = getFilteredHistory();
            
            if (filteredHistory.length === 0) {
                historyList.innerHTML = `
                    <div class="empty-state">
                        <p>üì≠ –ò—Å—Ç–æ—Ä–∏—è –ø—É—Å—Ç–∞</p>
                        <p style="margin-top: 10px; font-size: 14px;">–°–æ—Ö—Ä–∞–Ω–∏—Ç–µ —Å–≤–æ–π –ø–µ—Ä–≤—ã–π –ø–æ–¥—Å—á–µ—Ç!</p>
                    </div>
                `;
                return;
            }
            
            let html = '';
            filteredHistory.forEach(item => {
                const date = new Date(item.date);
                const dateStr = date.toLocaleDateString('ru-RU', {
                    day: '2-digit',
                    month: '2-digit',
                    year: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });
                
                html += `
                    <div class="history-item" data-id="${item.id}">
                        <div class="history-title">${item.title}</div>
                        ${item.description ? `<div style="color: #666; margin: 5px 0;">${item.description}</div>` : ''}
                        <div class="history-meta">
                            <span>–°—á–µ—Ç: <strong>${item.count}</strong></span>
                            <span>${dateStr}</span>
                        </div>
                        <button class="delete-btn" onclick="deleteHistoryItem(${item.id})" style="margin-top: 10px;">
                            –£–¥–∞–ª–∏—Ç—å
                        </button>
                    </div>
                `;
            });
            
            historyList.innerHTML = html;
        }
        
        function getFilteredHistory() {
            const activeFilter = document.querySelector('.filter-btn.active').textContent.toLowerCase();
            const now = new Date();
            
            return history.filter(item => {
                const itemDate = new Date(item.date);
                
                switch(activeFilter) {
                    case '—Å–µ–≥–æ–¥–Ω—è':
                        return itemDate.toDateString() === now.toDateString();
                    case '–≤—á–µ—Ä–∞':
                        const yesterday = new Date();
                        yesterday.setDate(yesterday.getDate() - 1);
                        return itemDate.toDateString() === yesterday.toDateString();
                    case '–Ω–µ–¥–µ–ª—è':
                        const weekAgo = new Date();
                        weekAgo.setDate(weekAgo.getDate() - 7);
                        return itemDate >= weekAgo;
                    case '–º–µ—Å—è—Ü':
                        return itemDate.getMonth() === now.getMonth() && 
                               itemDate.getFullYear() === now.getFullYear();
                    default:
                        return true;
                }
            });
        }
        
        function filterHistory(filter) {
            // –û–±–Ω–æ–≤–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω—É—é –∫–Ω–æ–ø–∫—É
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            
            event.target.classList.add('active');
            
            // –ó–∞–≥—Ä—É–∂–∞–µ–º –æ—Ç—Ñ–∏–ª—å—Ç—Ä–æ–≤–∞–Ω–Ω—É—é –∏—Å—Ç–æ—Ä–∏—é
            loadHistory();
        }
        
        function deleteHistoryItem(id) {
            if (confirm('–£–¥–∞–ª–∏—Ç—å —ç—Ç—É –∑–∞–ø–∏—Å—å?')) {
                history = history.filter(item => item.id !== id);
                saveHistory();
                loadHistory();
                showNotification('üóëÔ∏è –ó–∞–ø–∏—Å—å —É–¥–∞–ª–µ–Ω–∞');
            }
        }
        
        function clearHistory() {
            if (history.length > 0 && confirm('–û—á–∏—Å—Ç–∏—Ç—å –≤—Å—é –∏—Å—Ç–æ—Ä–∏—é? –≠—Ç–æ –¥–µ–π—Å—Ç–≤–∏–µ –Ω–µ–ª—å–∑—è –æ—Ç–º–µ–Ω–∏—Ç—å.')) {
                history = [];
                saveHistory();
                loadHistory();
                showNotification('üóëÔ∏è –ò—Å—Ç–æ—Ä–∏—è –æ—á–∏—â–µ–Ω–∞');
            }
        }
        
        // –ù–∞–≤–∏–≥–∞—Ü–∏—è
        function showPage(pageId) {
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            document.getElementById(pageId).classList.add('active');
            
            // –ü—Ä–∏ –æ—Ç–∫—Ä—ã—Ç–∏–∏ —Å—Ç—Ä–∞–Ω–∏—Ü—ã –∏—Å—Ç–æ—Ä–∏–∏ –æ–±–Ω–æ–≤–ª—è–µ–º –µ–µ
            if (pageId === 'historyPage') {
                loadHistory();
            }
        }
        
        // –£–≤–µ–¥–æ–º–ª–µ–Ω–∏—è
        function showNotification(message) {
            if (tg.platform !== 'unknown') {
                tg.showPopup({
                    title: '–£–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ',
                    message: message,
                    buttons: [{ type: 'ok' }]
                });
            } else {
                alert(message);
            }
        }
        
        // –†–∞–±–æ—Ç–∞ —Å localStorage
        function saveData() {
            localStorage.setItem('counter', counter);
        }
        
        function loadData() {
            const savedCounter = localStorage.getItem('counter');
            if (savedCounter !== null) {
                counter = parseInt(savedCounter);
            }
        }
        
        function saveHistory() {
            localStorage.setItem('counterHistory', JSON.stringify(history));
        }
        
        function loadHistoryData() {
            const savedHistory = localStorage.getItem('counterHistory');
            if (savedHistory) {
                history = JSON.parse(savedHistory);
            }
        }
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏—Å—Ç–æ—Ä–∏–∏
        loadHistoryData();
        
        // –î–ª—è —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è –≤–Ω–µ Telegram
        if (tg.initData === '') {
            console.log('–ó–∞–ø—É—Å–∫ –≤–Ω–µ Telegram');
        }
    </script>
</body>
</html>
